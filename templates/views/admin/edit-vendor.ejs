<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SSF - VENDOR EDITED</title>
    <%- include ('../partials/header-links') %>



        <!-- custom css -->
        <link rel="stylesheet" href="../css/admin/manage-admin.css">

        <style>
            .list-group-item input,
            textarea {
                border: none !important;
                outline: none !important;
                box-shadow: none !important;
                color: black !important;
                background: rgb(255, 228, 205);
            }
        </style>
</head>

<body>
    <div class="container edit-form-div">

        <div class="col-12 py-3 mt-4 headingDiv">
            <h3 class="headings">
                Edit Vendor <i class="fa-solid fa-pen-to-square"></i>
                <hr>
            </h3>
        </div>

        <a href="/admin/vendors">
            <button class="btn mx-2 back-btn">
                <i class="fa-solid fa-backward"></i> Back
            </button>
        </a>
        <div class="profie-card-div py-3">
            <form action="" class="col-sm-10 col-12 my-3" method="post">

                <div class="col-12 px-3 py-3 profile-info-div">
                    <ul class="list-group profile-info-grp">
                        <li class="list-group-item my-1">
                            <p class="col-4 key-para">Vendor - Email</p>
                            <input type="email" class="col-8 p-2" name="update_vendor_email"
                                value="<%=result.vendor_email%>">
                        </li>

                        <li class="list-group-item my-1">
                            <p class="col-4 key-para">Vendor - Name</p>
                            <input type="text" class="col-8 p-2" name="update_vendor_name"
                                value="<%=result.vendor_name%>">
                        </li>

                        <li class="list-group-item my-1">
                            <p class="col-4 key-para">Vendor - Mobile</p>
                            <input type="tel" class="col-8 p-2" name="update_vendor_mobile"
                                value="<%=result.vendor_mobile%>">
                        </li>

                        <li class="list-group-item my-1">
                            <p class="col-4 key-para">Vendor - Shop Name</p>
                            <input type="text" class="col-8 p-2" name="update_vendor_shop_name"
                                value="<%=result.vendor_shop_name%>">
                        </li>

                        <li class="list-group-item my-1 form-floating">
                            <p class="col-4 key-para">Vendor - Address</p>
                            <textarea class="col-8 p-2" name="update_vendor_shop_address" id="" cols="30"
                                rows="5"><%=result.vendor_shop_address%></textarea>
                        </li>

                    </ul>

                    <div class="mt-4 profile-info-btn-div">
                        <button type="submit" class="btn mx-2 edit-btn">
                            Edit <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>

</body>

</html>