<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SSF - Manage Managers</title>
    <%- include ('../partials/header-links') %>

        <!-- custom css -->
        <link rel="stylesheet" href="../css/admin/manage-admin.css">
</head>

<body>
    <%- include('../partials/navbar')%>

        <div class="container-fluid mx-auto mt-4 headingDiv">
            <h4 class="headings">
                Manage Managers
                <hr>
            </h4>
        </div>
        <div class="container plus-btn-div">
            <button class="btn py-2 add-btn" data-bs-toggle="modal" data-bs-target="#addManagerModal">
                <i class="fa-solid fa-plus"></i> Add Manager
            </button>
        </div>


        <!-- profile-card -->
        <div class="container-fluid my-5 profile-card-grant-parent-div">

            <div class="container px-sm-2 px-0 profile-card-parent-div">
                <%if(results.length>0){%>
                    <% results.forEach(result=> { %>

                        <div class="row mx-auto profie-card-div py-5 mt-5">

                            <div class="col-lg-4 col-12 px-2 py-2 my-sm-0 mb-3 card profile-img-div"
                                style="width: 15rem;">
                                <%if(result.manager_img){%>
                                    <img src="<%= result.manager_img%>" class="card-img-top" alt="...">
                                    <%}else{%>
                                        <img src="../images/profile-pic.jpg" class="card-img-top" alt="...">
                                        <!--<img src="<%= result.manager_img%>" class="card-img-top" alt="...">
                                    -->
                                        <%}%>
                            </div>

                            <div class="col-lg-8 col-12 px-3 py-3 profile-info-div">

                                <ul class="list-group profile-info-grp">

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Manager - Email</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.manager_email%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Manager - Name</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.manager_name%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Manager - Mobile</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.manager_mobile%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Manager - Address</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.manager_address%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Manager - Study</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.manager_study%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Manager - Experience</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.manager_experience%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Manager - Skills</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.manager_skill%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Manager - Password</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.manager_pass%>
                                        </p>
                                    </li>

                                </ul>

                                <div class="mt-4 profile-info-btn-div">
                                    <a href="/admin/edit-manager?op=edit&_id=<%=result._id%>">
                                        <button class="btn mx-2 edit-btn">
                                            Edit <i class="fa-solid fa-pen-to-square"></i>
                                        </button>
                                    </a>
                                    <a href="/admin/delete-manager?op=delete&_id=<%=result._id%>">
                                        <button class="btn mx-2 delete-btn">
                                            Delete <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </a>
                                </div>
                            </div>

                        </div>

                        <%});%>
                            <%}else{%>
                                <p class="py-2"
                                    style="color: orangered; text-align: center; background: rgb(255, 187, 162);">You
                                    have not add any manager yet.</p>
                                <%}%>
            </div>
        </div>


        <!-- Footer -->
        <%- include('../partials/footer')%>
</body>

</html>


<!-- modal for add manager -->

<div class="modal fade" id="addManagerModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addManagerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addManagerModalLabel">Add Manager
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/admin/managers" method="post" class="row g-3">
                    <div class="col-12">
                        <input type="email" class="form-control" id="add_manager_email" name="add_manager_email"
                            placeholder="Manager Email..." required>
                    </div>
                    <div class="col-12 form-floating">
                        <textarea type="text" class="form-control" id="add_manager_skill" cols="30" rows="10"
                            name="add_manager_skill" placeholder="Manager Skills..." required> </textarea>
                        <label for="add_manager_skill">Manager Skills...</label>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-control" id="add_manager_study" name="add_manager_study"
                            placeholder="Manager Study..." required>
                    </div>
                    <div class="col-12">
                        <input type="number" min="1" max="100" class="form-control" id="add_manager_experience"
                            name="add_manager_experience" placeholder="Manager Experience..." required>
                    </div>
                    <div class="col-12 modal-footer">
                        <button type="submit" id="myform" class="btn add-sbmt-btn">
                            <i class="fa-solid fa-plus"></i> Add
                        </button>
                        <button type="button" class="btn close-form-modal" data-bs-dismiss="modal">
                            Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>