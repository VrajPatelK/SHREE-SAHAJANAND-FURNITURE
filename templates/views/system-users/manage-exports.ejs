<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SSF - Manage Exports</title>
    <%- include ('../../partials/header-links') %>

        <!-- custom css -->
        <link rel="stylesheet" href="../css/manage-admin.css">
</head>
<!--  -->

<body>
    <%- include('../../partials/navbar')%>

        <div class="container-fluid mx-auto mt-4 headingDiv">
            <h4 class="headings">
                Manage Exports
                <hr>
            </h4>
        </div>
        <div class="container plus-btn-div">
            <button class="btn py-2 add-btn" data-bs-toggle="modal" data-bs-target="#addExportModal">
                <i class="fa-solid fa-plus"></i> Add Exports
            </button>
        </div>


        <!-- profile-card -->
        <div class="container-fluid my-5 profile-card-grant-parent-div">

            <div class="container px-sm-2 px-0 profile-card-parent-div">
                <%if(results.length>0){%>
                    <% results.forEach(result=> { %>

                        <div class="row mx-auto profie-card-div py-5 mt-5">

                            <div class="col-lg-10 col-12 px-3 py-3 profile-info-div">

                                <ul class="list-group profile-info-grp">

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Vendor - Email</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.key_vendor_email%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Vendor - Name</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.vendor_name%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Vendor - Shop Name</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.vendor_shop_name%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Vendor - Address</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.vendor_shop_address%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Vendor - Mobile</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            +91&nbsp;<%= result.vendor_mobile%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Export Product Name</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.item_info.item_name%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Export Product Quantity</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.item_info.item_quantity%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">Export Product Price (<i
                                                class="fa-solid fa-indian-rupee-sign"></i>)</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.item_info.item_price%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">On Date & Time</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.date_and_time%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">
                                            Total Bill (<i class="fa-solid fa-indian-rupee-sign"></i>)
                                            <br>
                                            (including GST & CGST)
                                        </p>
                                        <p class="col-sm-8 col-12 value-para">
                                            <%= result.total_bill%>
                                        </p>
                                    </li>

                                    <li class="list-group-item my-1">
                                        <p class="col-sm-4 col-12 key-para">GST + CGST</p>
                                        <p class="col-sm-8 col-12 value-para">
                                            GST : <%= result.gst%>%
                                                &nbsp;<i class="fa-solid fa-plus"></i>&nbsp;
                                                CGST : <%= result.cgst%>%
                                        </p>
                                    </li>

                                </ul>

                                <div class="mt-4 profile-info-btn-div">
                                    <a href="/admin/edit-export?op=edit&_id=<%=result._id%>">
                                        <button class="btn mx-2 edit-btn">
                                            Edit <i class="fa-solid fa-pen-to-square"></i>
                                        </button>
                                    </a>
                                    <a href="/admin/delete-export?op=delete&_id=<%=result._id%>">
                                        <button class="btn mx-2 delete-btn">
                                            Delete <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </a>
                                </div>
                            </div>

                        </div>

                        <%});%>
                            <%}else{%>
                                <p class="py-2"
                                    style="color: orangered; text-align: center; background: rgb(255, 187, 162);">You
                                    have not add any export data yet.</p>
                                <%}%>
            </div>
        </div>


        <!-- Footer -->
        <%- include('../../partials/footer')%>
</body>

</html>

<!-- modal for add export data -->

<div class="modal fade" id="addExportModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addExportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addExportModalLabel">Add Export Data
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/admin/exports" method="post" class="row g-3">

                    <div class="col-12">
                        <input type="email" class="form-control" id="key_vendor_email" name="key_vendor_email"
                            placeholder="Vendor Email..." required>
                    </div>
                    <div class="col-12" style="display: flex;justify-content: space-between;align-items: center;">
                        <div class="col-6 my-2">
                            <select name="add_item_name" id="add_item_name" class="form-select" aria-label="example"
                                required>
                                <option value="Sofas">Sofas</option>
                                <option value="Beds">Beds</option>
                                <option value="Mattrases">Mattrases</option>
                                <option value="Chairs">Chairs</option>
                                <option value="Tables">Tables</option>
                            </select>
                        </div>
                        <div class="col-6 mx-2 my-2">
                            <input type="number" min="1" class="form-control" id="add_item_quantity"
                                name="add_item_quantity" placeholder="Item Quantity..." required>
                        </div>
                    </div>

                    <div class="col-12 my-2">
                        <input type="number" min="1" class="form-control" id="add_item_price" name="add_item_price"
                            placeholder="Item Price..." required>
                    </div>

                    <div class="col-12 my-2">
                        <input type="number" min="1" max="100" class="form-control" id="add_gst" name="add_gst"
                            placeholder="GST Per Item..." required>
                    </div>

                    <div class="col-12 my-2">
                        <input type="number" min="1" max="100" class="form-control" id="add_cgst" name="add_cgst"
                            placeholder="CGST Per Item..." required>
                    </div>

                    <div class="col-12 modal-footer">
                        <button type="submit" id="myform" class="btn add-sbmt-btn">
                            <i class="fa-solid fa-plus"></i> Add
                        </button>
                        <button type="button" class="btn close-form-modal" data-bs-dismiss="modal">
                            Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>