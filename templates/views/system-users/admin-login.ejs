<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Login</title>
    <%- include ('../../partials/header-links') %>

        <!-- custom css -->
        <link rel="stylesheet" href="./css/admin-login.css">
</head>

<body>
    <div class="container-fluid" id="login-admin-form-cnt">
        <form class="col-xl-5 col-md-8 col-sm-10 col-12 px-2 py-5" method="post">
            <div class="mb-3">

                <select class="form-select" size="3" id="system_user" name="system_user" onchange="handleSystemUser()">
                    <option value="Admin">Admin</option>
                    <option value="Accountant">Accountant</option>
                    <option value="Manager">Manager</option>
                </select>

                <input type="email" class="form-control login-input" id="sys_user_email" name="sys_user_email"
                    placeholder="email" value="vraj.patel4801@gmail.com" required>

                <input type="password" class="form-control login-input" id="sys_user_pass" name="sys_user_pass"
                    placeholder="password" value="root">

                <% if(somethingWentWrong) {%>
                    <span style="color: red;">
                        <%=errorMsg%> !!!
                    </span>
                    <%}%>

            </div>
            <button type="submit" class="btn btn-primary" id="proceed" name="proceed">Login</button>
        </form>
    </div>

    <script>
        $(document).ready(() => {
            $("#sys_user_pass").hide();
        });

        function handleSystemUser() {
            $(document).ready(() => {
                if ($("#system_user").val() === "Admin") {
                    $("#sys_user_pass").show();
                }
                else {
                    $("#sys_user_pass").hide();
                }
            });
        }
    </script>
</body>

</html>