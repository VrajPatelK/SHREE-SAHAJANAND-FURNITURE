<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SSF - Sofas</title>

    <%- include ('../../partials/header-links') %>

        <link rel="stylesheet" href="../../../CSS/manage-admin.css">
        <script src="../JS/image-script.js" defer></script>


        <%if(session.userType==="customer" ){%>
            <script>

                let favouriteMap = new Map();
                let cartMap = new Map();
                let getFavourites;
                let getCarts;

                express_session_update(); // calling ...

                function express_session_update() { //declare ...
                    $(document).ready(() => {

                        getFavourites = new Promise((resolve, reject) => {
                            $.get('/get-favourites', (data, status) => {

                                let likeItems = data;
                                likeItems.forEach((likeItem) => {

                                    let lid = likeItem._id;
                                    let pid = likeItem.product._id;
                                    favouriteMap.set(pid, lid);
                                });

                                resolve(favouriteMap);
                            });
                        });

                        getCarts = new Promise((resolve, reject) => {
                            $.get('/get-carts', (data, status) => {

                                let cartItems = data;
                                cartItems.forEach((cartItem) => {
                                    let cartid = cartItem._id;
                                    let pid = cartItem.product._id;
                                    cartMap.set(pid, cartid);
                                });

                                $("#no_of_carts_badge").text(cartItems.length);
                                resolve(cartMap);
                            });
                        });
                    });
                }

                function addFav(pid) {
                    let body = { pid: pid }

                    $.post("/add-to-fav", body, function (data, status) {
                        console.log(data);
                        let pid = data.product;
                        let lid = data._id;

                        let rmv_fav_btn = `<button class="btn mx-2" id="rmv-to-fav-${pid}" onclick="rmvFav('${lid}','${pid}')">Rmv Fav</button>`;
                        $(`#fav-btn-div-${pid}`).html(rmv_fav_btn);
                        express_session_update();
                    });
                }

                function rmvFav(lid, pid) {
                    let body = { lid: lid, pid: pid }

                    $.post("/rmv-to-fav", body, function (data, status) {

                        let pid = data; // data = pid
                        let add_fav_btn = `<button class="btn mx-2" id="add-to-fav-${pid}" onclick="addFav('${pid}')">Add Fav</button>`;
                        $(`#fav-btn-div-${pid}`).html(add_fav_btn);

                        express_session_update();
                    });
                }

                function addCart(pid) {
                    let body = { pid: pid }

                    $.post("/add-to-cart", body, function (data, status) {

                        let pid = data.product;
                        let cartid = data._id;

                        let add_cart_btn = `<button class="btn mx-2" id="add-to-cart-${pid}" onclick="addMoreCart('${cartid}','${pid}')">Add More Time</button>`;
                        $(`#cart-btn-div-${pid}`).html(add_cart_btn);
                        express_session_update();
                    });
                }

                function addMoreCart(cartid, pid) {
                    let body = { cartid: cartid, pid: pid }

                    $.post("/add-to-cart", body, function (data, status) {

                        let pid = data.product;
                        let cartid = data._id;

                        let add_cart_btn = `<button class="btn mx-2" id="add-to-cart-${pid}" onclick="addMoreCart('${cartid}','${pid}')">Add More Time</button>`;
                        $(`#cart-btn-div-${pid}`).html(add_cart_btn);

                        express_session_update();
                    });
                }

            </script>
            <%}%>

</head>

<body>
    <%- include('../../partials/navbar')%>

        <div class="container-fluid mx-auto mt-4 headingDiv">
            <h4 class="headings">
                <%if(session.userType==="admin"){%>
                    Manage
                    <%}%>
                        Sofas
                        <hr>
            </h4>
        </div>
        <%if(session.userType==="admin" ){%>

            <div class="container plus-btn-div">
                <button class="btn py-2 btn-type-1" data-bs-toggle="modal" data-bs-target="#addSofaModal">
                    <i class="fa-solid fa-plus"></i> Add Sofa
                </button>
            </div>
            <%}%>
                <div class="container row mx-auto px-0 py-3 card-parent-div">

                    <%if(results.length>0){%>
                        <%results.forEach((result,indx)=> { %>

                            <div class="col-lg-4 col-md-6 col-12 mb-4 card-div">
                                <p id="target"></p>
                                <div class="card" style="width: 100%;">
                                    <div class="product-img-div px-4 pt-4">
                                        <%if(result.img_link){%>
                                            <img src="<%= result.img_link%>" class="card-img-top" alt="...">
                                            <%}else{%>
                                                <img src="../../sofa.jpg" class="card-img-top" alt="">
                                                <%}%>
                                    </div>

                                    <div class="col-11 card-body">
                                        <div class="info-structure">
                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Name : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.sofa_name%>
                                                </p>
                                            </div>
                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Color : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.color%>
                                                </p>
                                            </div>
                                            <div class="info-div my-2">
                                                <p class="key-para px-1 py-2">Dimensions : </p>
                                                <p class="value-para px-2 py-2">
                                                    Length : <%=result.dimensions.length%>
                                                        <br>
                                                        Height : <%=result.dimensions.height%>
                                                            <br>
                                                            Width : <%=result.dimensions.width%>
                                                </p>
                                            </div>
                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Availability : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.availability%>
                                                </p>
                                            </div>
                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Price : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.price%>
                                                </p>
                                            </div>
                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Material : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.material%>
                                                </p>
                                            </div>

                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Seaters : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.seaters%>
                                                </p>
                                            </div>
                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Warrenty : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.warrenty%>
                                                </p>
                                            </div>
                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Discount : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.discount%>
                                                </p>
                                            </div>
                                            <div class="info-div my-2">
                                                <p class="key-para px-2 py-2">Filler Type : </p>
                                                <p class="value-para px-2 py-2">
                                                    <%=result.filler_type%>
                                                </p>
                                            </div>
                                        </div>
                                        <% if(session.userType==="customer" ){%>

                                            <!-- script -->
                                            <script>
                                                $(document).ready(() => {
                                                    getFavourites.then((favouriteMap) => {
                                                        let pid = "<%=result._id%>";
                                                        let lid = favouriteMap.get(pid);

                                                        if (lid) {

                                                            let rmv_fav_btn = `<button class="btn mx-2" id="rmv-to-fav-<%=result._id%>" onclick="rmvFav('${lid}','${pid}')">Rmv Fav</button>`;
                                                            $(`#fav-btn-div-${pid}`).html(rmv_fav_btn);
                                                        }
                                                        else {
                                                            let add_fav_btn = `<button class="btn mx-2" id="add-to-fav-${pid}" onclick="addFav('${pid}')">Add Fav</button>`;
                                                            $(`#fav-btn-div-${pid}`).html(add_fav_btn);
                                                        }
                                                    });

                                                    getCarts.then((cartMap) => {
                                                        let pid = "<%=result._id%>";
                                                        let cartid = cartMap.get(pid);

                                                        if (cartid) {
                                                            let add_cart_btn = `<button class="btn mx-2" id="add-to-cart-${pid}" onclick="addMoreCart('${cartid}','${pid}')">Add More Time</button>`;
                                                            $(`#cart-btn-div-${pid}`).html(add_cart_btn);
                                                        }
                                                        else {
                                                            let add_cart_btn = `<button class="btn mx-2" id="add-to-cart-${pid}" onclick="addCart('${pid}')">Add Cart</button>`;
                                                            $(`#cart-btn-div-${pid}`).html(add_cart_btn);
                                                        }
                                                    });
                                                });
                                            </script>
                                            <!-- script -->

                                            <div class="mt-4 btn-div d-flex justify-content-between"
                                                id="fav-btn-div-<%=result._id%>">
                                            </div>

                                            <div class="mt-4 btn-div d-flex justify-content-between"
                                                id="cart-btn-div-<%=result._id%>">
                                            </div>

                                            <%}else if(session.userType==="admin" ){%>
                                                <div class="mt-4 btn-div d-flex justify-content-between">
                                                    <a href="/product/sofa/edit/<%=result._id%>">
                                                        <button class="btn mx-2 btn-type-2">
                                                            Edit <i class="fa-solid fa-pen-to-square"></i>
                                                        </button>
                                                    </a>
                                                    <a href="/product/sofa/delete/<%=result._id%>">
                                                        <button class="btn mx-2 btn-type-2">
                                                            Delete <i class="fa-solid fa-trash"></i>
                                                        </button>
                                                    </a>
                                                </div>
                                                <%}%>

                                    </div>
                                </div>
                            </div>
                            <%})%>
                                <%}%>
                </div>

                <!-- footer -->
                <%- include('../../partials/footer')%>




</body>

</html>


<!-- modal for add sofas -->

<div class="modal fade" id="addSofaModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addSofaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSofaModalLabel">Add Sofa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" class="row g-3">

                    <div class="col-12">
                        <input type="text" class="form-control" id="add_sofa_name" name="add_sofa_name"
                            placeholder="Name" required>
                    </div>

                    <div class="col-12">
                        <input class="form-control" type="file" id="image_file" name="image_file"
                            accept=".jpeg, .jpg, .png" onchange="convertToBase64()">
                        <input type="text" name="image" id="image" hidden>
                    </div>

                    <div class="col-12">
                        <input type="text" class="form-control" id="add_colors" name="add_color">
                    </div>

                    <div class="col-12">
                        <input type="text" class="form-control" id="add_length" name="add_length" placeholder="Length"
                            required>
                    </div>

                    <div class="col-12">
                        <input type="text" class="form-control" id="add_height" name="add_height" placeholder="Height"
                            required>
                    </div>

                    <div class="col-12">
                        <input type="text" class="form-control" id="add_width" name="add_width" placeholder="Width"
                            required>
                    </div>

                    <div class="col-12">
                        <input type="number" class="form-control" id="add_price" name="add_price" placeholder="Price"
                            required>
                    </div>

                    <div class="col-12">
                        <input type="text" class="form-control" id="add_material" name="add_material"
                            placeholder="Material" required>
                    </div>

                    <div class="col-12">
                        <input type="number" class="form-control" id="add_seaters" name="add_seaters"
                            placeholder="Seaters" required>
                    </div>

                    <div class="col-12">
                        <input type="number" class="form-control" id="add_warrenty" name="add_warrenty"
                            placeholder="Warrenty (Years)" required>
                    </div>

                    <div class="col-12">
                        <input type="number" class="form-control" id="add_discount" name="add_discount"
                            placeholder="Discount(%)" required>
                    </div>

                    <div class="col-12 d-flex justify-content-around align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="add_availability" value="on"
                                id="flexRadioDefault1" checked>
                            <label class="form-check-label" for="flexRadioDefault1" style="color: #fff !important;">
                                Available
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="add_availability" value="off"
                                id="flexRadioDefault2">
                            <label class="form-check-label" for="flexRadioDefault2" style="color: #fff !important;">
                                Not Available
                            </label>
                        </div>
                    </div>


                    <div class="col-12 modal-footer">
                        <button type="submit" id="myform" class="btn btn-type-2">
                            <i class="fa-solid fa-plus"></i> Add
                        </button>
                        <button type="button" class="btn btn-type-1" data-bs-dismiss="modal">
                            Close
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>