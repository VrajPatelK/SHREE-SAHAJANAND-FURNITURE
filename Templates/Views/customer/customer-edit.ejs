<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SSF - Customer Edit</title>
    <%- include ('../../partials/header-links') %>

        <!-- custom css -->
        <link rel="stylesheet" href="../css/manage-admin.css">
        <script src="../JS/image-script.js" defer></script>

</head>

<body>
    <div class="container edit-form-div">

        <div class="col-12 py-3 mt-4 headingDiv">
            <h3 class="headings">
                Edit Profile <i class="fa-solid fa-pen-to-square"></i>
                <hr>
            </h3>
        </div>

        <%if(swr){%>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%=errorMsg%>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%}%>

                <a href="/customer-profile">
                    <button class="btn mx-2 btn-type-2">
                        <i class="fa-solid fa-backward"></i> Back
                    </button>
                </a>
                <div class="profie-card-div py-3">
                    <form class="col-sm-10 col-12 my-3" method="post">

                        <div class="col-12 px-3 py-3 profile-info-div">
                            <ul class="list-group profile-info-grp">

                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">Email</p>
                                    <input type="email" class="col-8 p-2" name="email" value="<%=result.email%>"
                                        required>
                                </li>
                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">Name</p>
                                    <input type="text" class="col-8 p-2" name="name" value="<%=result.name%>" required>
                                </li>
                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">Mobile</p>
                                    <input type="tel" class="col-8 p-2" maxlength="10" pattern="[0-9]{10}" name="mobile"
                                        value="<%=result.mobile%>" required>
                                </li>
                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">Profile Img</p>
                                    <input class="form-control" type="file" id="image_file" name="image_file"
                                        accept=".jpeg, .jpg, .png" onchange="convertToBase64()">
                                    <input type="text" name="image" id="image" value="<%=result.image%>" hidden>
                                </li>
                                <li class="list-group-item my-1 justify-content-start">
                                    <p class="col-4 key-para">Remove Profile Image</p>
                                    <span class="col-8">
                                        <input type="checkbox" class="form-check-input-lg" name="rmvImage"
                                            id="rmvImage">
                                    </span>
                                </li>
                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">Home No.</p>
                                    <input type="text" class="col-8 p-2" name="homeNo" value="<%= result.homeNo%>"
                                        required>
                                </li>
                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">Street</p>
                                    <input type="text" class="col-8 p-2" name="street" value="<%= result.street%>"
                                        required>
                                </li>
                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">Pincode</p>
                                    <input type="text" class="col-8 p-2" name="pincode" value="<%= result.pincode%>"
                                        pattern="[0-9]{6}" required>
                                </li>
                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">District</p>
                                    <input type="text" class="col-8 p-2" name="district" value="<%= result.district%>"
                                        required>
                                </li>
                                <li class="list-group-item my-1">
                                    <p class="col-4 key-para">State</p>
                                    <input type="text" class="col-8 p-2" name="state" value="<%= result.state%>"
                                        required>
                                </li>
                            </ul>

                            <div class="mt-4 profile-info-btn-div">
                                <button type="submit" class="btn mx-2 btn-type-2">
                                    Edit <i class="fa-solid fa-pen-to-square"></i>
                                </button>
                            </div>

                        </div>

                    </form>
                </div>
    </div>

</body>

</html>