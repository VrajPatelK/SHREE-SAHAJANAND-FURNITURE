<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SSF - MANUFACTURER EDITED</title>
    <%- include ('../../partials/header-links') %>



        <!-- custom css -->
        <link rel="stylesheet" href="../css/manage-admin.css">

        <style>
            .list-group-item input,
            textarea {
                border: none !important;
                outline: none !important;
                box-shadow: none !important;
                color: black !important;
                background: rgb(255, 228, 205);
            }
        </style>
</head>

<body>
    <div class="container edit-form-div">

        <div class="col-12 py-3 mt-4 headingDiv">
            <h3 class="headings">
                Edit Manufacturer <i class="fa-solid fa-pen-to-square"></i>
                <hr>
            </h3>
        </div>

        <a href="/admin/manufacturers">
            <button class="btn mx-2 btn-type-2">
                <i class="fa-solid fa-backward"></i> Back
            </button>
        </a>
        <div class="profie-card-div py-3">
            <form action="" class="col-sm-10 col-12 my-3" method="post">

                <div class="col-12 px-3 py-3 profile-info-div">
                    <ul class="list-group profile-info-grp">
                        <li class="list-group-item my-1">
                            <p class="col-4 key-para">Manufacturer - Email</p>
                            <input type="email" class="col-8 p-2" name="update_manufacturer_email"
                                value="<%=result.manufacturer_email%>">
                        </li>

                        <li class="list-group-item my-1">
                            <p class="col-4 key-para">Manufacturer - Name</p>
                            <input type="text" class="col-8 p-2" name="update_manufacturer_name"
                                value="<%=result.manufacturer_name%>">
                        </li>

                        <li class="list-group-item my-1">
                            <p class="col-4 key-para">Manufacturer - Mobile</p>
                            <input type="tel" class="col-8 p-2" maxlength="10" pattern="[0-9]{10}"
                                name="update_manufacturer_mobile" value="<%=result.manufacturer_mobile%>">
                        </li>

                        <li class="list-group-item my-1">
                            <p class="col-4 key-para">Manufacturer - Factory Name</p>
                            <input type="text" class="col-8 p-2" name="update_manufacturer_factory_name"
                                value="<%=result.manufacturer_factory_name%>">
                        </li>

                        <li class="list-group-item my-1 form-floating">
                            <p class="col-4 key-para">Manufacturer - Address</p>
                            <textarea class="col-8 p-2" name="update_manufacturer_factory_address" id="" cols="30"
                                rows="5"><%=result.manufacturer_factory_address%></textarea>
                        </li>

                    </ul>

                    <div class="mt-4 profile-info-btn-div">
                        <button type="submit" class="btn mx-2 btn-type-2">
                            Edit <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>

</body>

</html>